{
  "_comment": "複製此檔案建立新策略。必填欄位標記為 REQUIRED。",

  "strategy_name": "REQUIRED: 策略名稱（英文）",
  "strategy_version": "v1",
  "notes": "在這裡描述策略邏輯和假設",

  "data": {
    "symbol": "REQUIRED: e.g. BTCUSDT / ETHUSDT / SOLUSDT",
    "interval": "REQUIRED: 1m / 5m / 15m / 1h / 4h / 1d",
    "start_date": "REQUIRED: YYYY-MM-DD",
    "end_date": "REQUIRED: YYYY-MM-DD (或 today)"
  },

  "entry": {
    "_comment": "進場條件。所有條件同時成立才入場。",
    "rebound_pct": 2.0,
    "rsi_min": 30,
    "rsi_max": 40,
    "require_macd_divergence": true,
    "divergence_type": "bullish"
  },

  "exit": {
    "_comment": "三個出場條件必須至少有一個有效",
    "tp_rsi": 70,
    "sl_type": "divergence_low",
    "_sl_type_options": [
      "divergence_low: 底背離低點（推薦）",
      "prev_candle_low: 入場前一棒最低點",
      "fixed_pct: 固定百分比止損（需設 sl_pct）",
      "atr_multiple: ATR 倍數止損（需設 sl_atr_mult）"
    ],
    "sl_buffer_pct": 0.1,
    "sl_pct": -5.0,
    "sl_atr_mult": 2.0,
    "time_stop_bars": 30
  },

  "indicators": {
    "macd_fast": 12,
    "macd_slow": 26,
    "macd_signal": 9,
    "rsi_period": 14,
    "atr_period": 14,
    "swing_window": 5,
    "divergence_lookback_bars": 60
  },

  "costs": {
    "fee_pct": 0.06,
    "slippage_pct": 0.05
  },

  "filters": {
    "_comment": "可選的市場狀態過濾器",
    "min_volume_percentile": null,
    "trend_filter_enabled": false,
    "trend_ma_period": 200,
    "trend_direction": "any"
  },

  "output": {
    "save_csv": true,
    "results_dir": "results/"
  }
}
